{{!-- {{#each patient.records}} --}}
{{!-- {{#if (one_record_compare ../recordToShow _id)}} --}}
<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a class="active generic-button" href="/clinician/patients">Patients</a>
            </li>
            <li><i class='bx material-icons'>chevron_right</i></li>
            <li>
                <a class="active generic-button" href="/clinician/patients?user={{patient._id}}">{{patient.email}}</a>
            </li>
             <li><i class='bx material-icons'>chevron_right</i></li>
            <li>
                <a class="active generic-button" href="#">View Patient Record</a>
            </li>
        </ul>
        <br>
        <h1>View Patient Record</h1>
    </div>
</div>

<ul class="box-info">
    <li>
        <i class='bx material-icons'>today</i>
        <span class="text">
            <h3>{{getCurrentDate}}</h3>
            <p>Today's Date</p>
        </span>
    </li>
    {{#with patient}}
    <li>
        <i class='bx material-icons'>medication</i>
        <span class="text">
            <h3>{{this.first_name}} {{this.last_name}}</h3>
            <p>Patient</p>
        </span>
    </li>
    <li>
        <i class='bx material-icons'>medication</i>
        <span class="text usernametext">
            <h3>{{this.email}}</h3>
            <p>Patient Username</p>
        </span>
    </li>
    {{/with}}
</ul>


<div class="table-data">
    {{#with record}}
    <div class="order">
        <div class="head">
            <!--					<i class='bx bx-check-square' ></i>-->
            <h3>Record Details</h3>
        </div>
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Date Added</h3>
                    <h2>{{formatLongDate this.created_at}}</h2>
                </span>
            </li>
        </ul>
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Record Type</h3>
                    <h2>{{formatThresholds this.record_type}}</h2>
                </span>
            </li>
            
            <li {{#if_eq this.record_type this.value}} {{/if_eq}}>
                <span class="text">
                    <h3>Value</h3>
                    <h2>{{this.value}}</h2>
                </span>
            </li>
        </ul>
        
        
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Comments</h3>
                    <h3>{{this.comments}}</h3>
                </span>
            </li>
        </ul>
    </div>
    {{/with}}

    <div class="todo">
        <div class="head">
            <!--					<i class='bx bx-edit-alt'></i>-->
            <h3>Patient thresholds</h3>
        </div>
        <ul class="todo-list">
			{{#each patient.thresholds}}
            <li class="blueone">
				<p>{{formatThresholds this.name}}: {{negativeThreshold this.lower}} - {{negativeThreshold this.upper}}</p>
			</li>
        	{{/each}}
        </ul>
    </div>
</div>
