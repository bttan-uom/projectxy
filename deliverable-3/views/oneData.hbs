{{#each oneItem.records}}
<div class="head-title">
    <div class="left">
        <ul class="breadcrumb">
            <li>
                <a class="active generic-button" href="/userHistory">History</a>
            </li>
            <li><i class='bx material-icons'>chevron_right</i></li>
            <li>
                <a class="active generic-button" href="#">{{record_type}} on {{formatDate created_at}}</a>
            </li>
        </ul>
        <br>
        <h1>{{record_type}} record <br>{{formatDate created_at}}</h1>
    </div>    
</div>


<ul class="box-info">
    <li>
        <i class='bx material-icons'>today</i>
        <span class="text">
            <h3>{{getCurrentDate}}</h3>
            <p>Today's Date</p>
        </span>
    </li>
    <li>
        <i class='bx material-icons'>medication</i>
        <span class="text">
            <h3>Dr. {{../clinician.first_name}} {{../clinician.last_name}}</h3>
            <p>Your clinician</p>
        </span>
    </li>
</ul>


<div class="table-data">
    <div class="order">
        <div class="head">
            <!--					<i class='bx bx-check-square' ></i>-->
            <h3>Record Details</h3>
        </div>
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Date Added</h3>
                    <h2>{{formatLongDate created_at}}</h2>
                </span>
            </li>
        </ul>
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Record Type</h3>
                    <h2>{{this.record_type}}</h2>
                </span>
            </li>
            
            <li {{#if_eq this.record_type this.value}} {{/if_eq}}>
                <span class="text">
                    <h3>Value</h3>
                    <h2>{{this.value}}</h2>
                </span>
            </li>
        </ul>
        
        
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Comments</h3>
                    <h3>{{this.comments}}</h3>
                </span>
            </li>
        </ul>
        
        
        
    </div>
    <div class="todo">
        <div class="head">
            <!--					<i class='bx bx-edit-alt'></i>-->
            <h3>Your thresholds</h3>
        </div>
        <ul class="todo-list">
            {{#each ../oneItem.thresholds}}
            <li class="blueone">
                <p>{{this.[0]}}: {{this.[1].[0]}} - {{this.[1].[1]}}</p>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

{{/each}}