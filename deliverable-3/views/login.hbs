<ul class="box-info">
	<li>
		<h1 style="font-size:2.5rem">Login to MyGlucose</h1>
	</li>
</ul>


<div class="table-data">
	
	<div class="order">
		<div class="head">
<!--					<i class='bx bx-check-square' ></i>-->
			<h3>Login</h3>
		</div>
		{{#each flash}}
			<p class="alert">{{this}}</p>
		{{/each}}
		<form class="form-group" action="auth" method="POST">
			<label>Username</label>
			<input class="input-button-select" type="text" placeholder="Username" name="username"/>
			<br><br>
			<label>Password</label>
			<input class="input-button-select" type="password" placeholder="Password" name="password"/>
			<br><br>
			<input style="font-size: 110%;" class="generic-button" type="submit" value="Login"/>
		</form>

		<br>
		<p>Please change the temporary password your clinician gave you if you have not done so already.</p>
	</div>
	<div class="todo">
		<div class="head">
			<!--					<i class='bx bx-edit-alt'></i>-->
			 <img style="width:20rem" src="../img/aboutusbox1.png">
		</div>		
	</div>
</div>