<body>
	<div class="head-title">
		<div class="left">
			<ul class="breadcrumb">
				<li>
					<pre><a class="active generic-button" href="#">Add Record</a></pre>
				</li>
				<li><i class='bx material-icons'>chevron_right</i></li>
			</ul>
			<br>
			<h1>Add Record</h1>
			
		</div>
		
		
	</div>
	
	<ul class="box-info">
		<li>
			<i class='bx material-icons'>today</i>
			<span class="text">
				<h3>{{getCurrentDate}}</h3>
				<p>Today's Date</p>
			</span>
		</li>
		<li>
			<i class='bx material-icons'>medication</i>
			<span class="text">
				{{#with clinician}}
				<h3>Dr. {{this.first_name}} {{this.last_name}}</h3>
				{{/with}}
				<p>Your clinician</p>
			</span>
		</li>
		<li>
			<i class='bx material-icons'>playlist_add</i>
			<span class="text">
				<h3>NUM</h3>
				<p>Records to complete</p>
			</span>
		</li>
	</ul>

	<div class="table-data">
		<div class="order">
			<div class="head">
				<!--					<i class='bx bx-check-square' ></i>-->
				<h3>Enter record details</h3>
			</div>
			
			<form class="form-group" id="addRecordForm" action="/user/addRecord" method="POST">
				<label>Record Type</label>
				<select class="input-button-select" name="record_type">
					<option selected="true" disabled="disabled">Select from the list</option>
					{{#each oneItem.thresholds}}
					{{#if (shouldUserRecord lower)}}
					<option value="{{name}}">{{formatThresholds name}}</option>
					{{else}}
					{{/if}}
					{{/each}}
				</select>
				<br><br>
				<label>Value</label>
				<input class="input-button-select" type='number' placeholder="Number" name="value" />
				<br><br>
				<textarea style="max-width:100%" class="input-button-select" id="addRecordForm" placeholder="Add comment here" name="comments"></textarea>
				<br><br>
				<input style="font-size: 110%;" class="generic-button" type="submit" value="Submit Record"/>
			</form>

		</div>
		<div class="todo">
			<div class="head">
				<!--					<i class='bx bx-edit-alt'></i>-->
				<h3>Your thresholds</h3>
			</div>
			<ul class="todo-list">
				{{#each oneItem.thresholds}}
				<li class="blueone">
					<p>{{formatThresholds name}}: {{negativeThreshold this.lower}} - {{negativeThreshold this.upper}}</p>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</body>
<script>
	function GetRandom() {
		var myElement = document.getElementById("pwbx")
		myElement.value = Math.random()
	}
	
</script>

