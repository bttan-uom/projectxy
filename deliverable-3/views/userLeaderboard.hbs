<div class="head-title">
	<div class="left">
		<ul class="breadcrumb">
			<li>
				<a class="active generic-button" href="#">Leaderboard</a>
			</li>

			<li>
				<i class='bx material-icons'>chevron_right</i>
			</li>
		</ul>

		<br>
		<h1>Leaderboard</h1>
	</div>
</div>

<ul class="box-info">
	<li>
		<i class='bx material-icons'>today</i>
		<span class="text">
			<h3>{{getCurrentDate}}</h3>
			<p>Today's Date</p>
		</span>
	</li>

	<li>
		<i class='bx material-icons'>medication</i>
		<span class="text">
				<h3>Dr. {{clinician.first_name}} {{clinician.last_name}}</h3>
			<p>Your clinician</p>
		</span>
	</li>
</ul>

<div class="table-data">
	<div class="order">
		{{#isInLeaderboard position}} {{/isInLeaderboard}}

		<table class="scrollTable" id="allPatientsTable">
			<thead>
				<tr>
					<th scope="col">Ranking</th>
					<th scope="col">User</th>
					<th scope="col">Engagement Rate</th>
				</tr>
			</thead>

			<tbody>
				{{!-- loops over the data set --}}
				{{#each leaderboard}}
				<tr>
					<td data-label="Ranking"> 
						<p>{{this.position}}</p>
					</td>
					<td data-label="User"> 
						<p>{{this.username}}</p>
					</td>
					<td data-label="Engagement Rate"><p>{{formatEngagement this.engagement}}%</p></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<div class="todo">
		<div class="head">
			<!--					<i class='bx bx-edit-alt'></i>-->
			<h3>Badges</h3>
		</div>

		<ul class="todo-list">
			<li class="completed">
				{{#isEngagementHigh engagement}} {{/isEngagementHigh}}
			</li>
		</ul>
	</div>
</div>

