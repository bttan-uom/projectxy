<form id="addRecordForm" action="/user/history/edit" method="POST">
<div class="head-title">
    <div class="left">
        {{#with record}}
        <ul class="breadcrumb">
            <li>
                <a class="active generic-button" href="/user/history">History</a>
            </li>
            <li><i class='bx material-icons'>chevron_right</i></li>
            <li>
                <a class="active generic-button" href="#">{{record_type}} on {{formatDate created_at}}</a>
            </li>
            <li><i class='bx material-icons'>chevron_right</i></li>
            <li>
                <a class="active generic-button" href="#">Edit</a>
            </li>
        </ul>
        <br>
        <h1>Edit Record: {{formatThresholds record_type}}<br>{{formatDate created_at}}</h1>
        {{/with}}
    </div>
    <a href="/user/history/" class="btn-download">
	<i class='bx material-icons'>done</i>
</a>
</div>


<ul class="box-info">
    <li>
        <i class='bx material-icons'>today</i>
        <span class="text">
            <h3>{{getCurrentDate}}</h3>
            <p>Today's Date</p>
        </span>
    </li>
    <li>
        <i class='bx material-icons'>medication</i>
        <span class="text">
            {{#with clinician}}
            <h3>Dr. {{this.first_name}} {{this.last_name}}</h3>
            {{/with}}
            <p>Your clinician</p>
        </span>
    </li>
</ul>


<div class="table-data">
    <div class="order">
        <div class="head">
            <!--					<i class='bx bx-check-square' ></i>-->
            <h3>Record Details</h3>
        </div>
        {{#with record}}
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Record ID</h3>
                    <h2>{{_id}}</h2>
                </span>
            </li>
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Date Added</h3>
                    <h2>{{formatDateLongYear created_at}}</h2>
                </span>
            </li>
        </ul>

        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Record Type</h3>
                    <h2>{{this.record_type}}</h2>
                </span>
            </li>

            <li {{#if_eq this.record_type this.value}} {{/if_eq}}>
                <span class="text">
                    <h3>Value</h3>
                    <h2>{{this.value}}</h2>
                </span>
            </li>
        </ul>
        
        <ul class="box-info">
            <li style="background-color:var(--grey);">
                <span class="text">
                    <h3>Comments</h3>
                    <h3>{{this.comments}}</h3>
                </span>
            </li>
        </ul>
        {{/with}}
    </div>
    <div class="todo">
        <div class="head">
            <!--					<i class='bx bx-edit-alt'></i>-->
            <h3>Your thresholds</h3>
        </div>
        <ul class="todo-list">
            {{#each patient.thresholds}}
            <li class="blueone">
                <p>{{formatThresholds this.name}}: {{negativeThreshold this.lower}} - {{negativeThreshold this.upper}}</p>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

</form>